{
  "manifest_version": 2,

  "name": "HTTP Trace",
  "description": "Tracks all HTTP requests made from the current tab.",
  "version": "0.4",

  "permissions": [
    "activeTab",
    "webRequest",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "HTTP Trace"
  }
}

